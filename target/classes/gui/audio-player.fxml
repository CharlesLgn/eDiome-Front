<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER" prefHeight="45.0" prefWidth="300.0" spacing="10.0" styleClass="pn-zone-travail" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ToggleButton fx:id="playPause" mnemonicParsing="false" onAction="#playPauseClicked" prefHeight="35.0" prefWidth="45.0" snapToPixel="false" styleClass="button-dashboard">
         <graphic>
            <ImageView fx:id="igmPlay">
               <image>
                  <Image url="@../image/play.png" />
               </image>
            </ImageView>
         </graphic></ToggleButton>
      <Button fx:id="stop" mnemonicParsing="false" onAction="#stopClicked" prefHeight="35.0" prefWidth="45.0" styleClass="button-dashboard">
         <graphic>
            <ImageView>
               <image>
                  <Image url="@../image/stop.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <ProgressBar fx:id="mediaTime" prefHeight="23.0" prefWidth="180.0" progress="0.0" />
   </children>
</HBox>
